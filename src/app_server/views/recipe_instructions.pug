extends layout
  
block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp; #{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-6
      h2 Ingredients
      each ingredient in ingredients
        .media
          a.pull-left(href='#')
            img.media-object(src='https://spoonacular.com/cdn/ingredients_100x100/'+ ingredient.image, alt='ingredient image')
          .media-body
            h3.media-heading #{ingredient.name}
    .col-xs-12.col-sm-6
      h2 Steps
      // The number for each step in `responseBody.recipe.steps`
      each step in steps
        h3 #{step.number}.

          // Instructions for each step
          p
            | #{step.step}
